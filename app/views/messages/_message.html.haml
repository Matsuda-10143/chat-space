.message-box{"data-message-id": "#{message.id}"}
  .comment-user_detail
    .user-name_box
      = message.user.name
    .time-log
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message
    - if message.content.present?
      %p.content
        = message.content
      = image_tag message.image.url, class: 'lower-message_image' if message.image.present?