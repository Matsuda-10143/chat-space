.body
  = render 'shared/side_bar'
  .right-box
    .group-header
      .group-header_left-box
        .current-group_name
          = @group.name
        .member-list_box
          .member-title
            .p member
          .member
            = current_user.name
      .group-header_right-box
        = link_to edit_group_path(@group) do
          .p EDIT
    .message-room
      = render partial: 'message_room', collection: @messages, as: :message
    .comment-fotter
      .message-form_box
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'message_form', placeholder: 'type a message'
          .img-btn_box
            = f.label :image, class: 'img' do
              = fa_icon 'picture-o', class: 'icon'
              = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'send-btn_box'